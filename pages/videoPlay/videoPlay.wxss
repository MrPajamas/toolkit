image {
    width: 100%;
    height: 100%;
    display: block;
}

.container {
    width: 100%;
    height: 100vh;
    background-size: 100%;
    background-repeat: no-repeat;
    position: relative;
    overflow-y: hidden;
    background-size: 100%;
}
video{
    width: 100%;
    height: 100%;
}

.data{
    position: absolute;
    left: 20rpx;
    bottom: 100rpx;
    z-index: 100;
    color: #fff;
    font-size: 24rpx;
}
.line{
    height: 1px;
    width: 100%;
    background-color: #fff;
    margin:7rpx 0;
}
.laud{
    position: absolute;
    right: 18rpx;
    top: 50%;
    transform: translateY(-50%);
    color: #fff;
    font-size: 24rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.heart{
    width: 84rpx;
    height: 82rpx;
}
.share{
    position: absolute;
    right: 18rpx;
    top: 34%;
    padding: 0!important;
    background-color: transparent!important;
}

.share::after,
.share::before {
    background-color: transparent!important;
    border: none;
}
.shareImg{
    width: 84rpx;
    height: 84rpx;
}
.sharetext{
    font-size: 24rpx;
    color: #fff;
    line-height: 1;
}


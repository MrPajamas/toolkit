image {
    width: 100%;
    height: 100%;
    display: block;
}

.container {
    width: 100%;
    height: 100vh;
    background-size: 100%;
    background-repeat: no-repeat;
    position: relative;
    overflow-x: hidden;
    background-color: #d9d9d9;
    padding-bottom: 100rpx;
    /* border: 1rpx; */
}

.banner {
    width: 100%;
    height: auto;
    position: relative;
}

.signIn {
    position: absolute;
    width: 255rpx;
    height: 84rpx;
    border: 1rpx solid #fff;
    left: 50%;
    transform: translateX(-50%);
    top: 45rpx;
    border-radius: 50rpx;
    font-size: 36rpx;
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
}

.signInIcon {
    width: 39rpx;
    height: 36rpx;
    margin-right: 20rpx;
}

.successive {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 156rpx;
    font-size: 30rpx;
    color: #fff;
    white-space: nowrap;
}

.main {
    width: 688rpx;
    height: auto;
    background-color: #fff;
    border-radius: 25rpx;
    margin: -124rpx auto 0;
    position: relative;
    z-index: 49;
    overflow: hidden;
}

.date {
    width: 650rpx;
    font-size: 34rpx;
    text-align: center;
    padding: 25rpx 0;
    margin: 0 auto;
    border-bottom: 1rpx solid #ccc;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.main .week {
    display: flex;
    margin-top: 10rpx;
}

.main .week .week_item {
    width: 14.2%;
    text-align: center;
}

.main .content {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    margin-top: 43rpx;
}

.main .content .inexistent {
    width: 14.2%;
    margin-bottom: 60rpx;
}

.main .content .number {
    width: 14.2%;
    text-align: center;
    font-size: 34rpx;
    margin-bottom: 50rpx;
    line-height: 1;
}

.red {
    width: 48rpx;
    height: 48rpx;
    margin: 0 auto;
}

.next,
.pre {
    width: 26rpx;
    height: 42rpx;
}

.pre {
    transform: rotate(180deg);
}



.checkFrame{
    width: 602rpx;
    height: 541rpx;
    background-size: 100%;
    background-repeat: no-repeat;
    position: absolute;
    left: 50%;
    top: 40%;
    transform: translate(-50%,-50%);
    z-index: 100;
}
.txt_box{
    width: 380rpx;
    height: 200rpx;
    position: absolute;
    top: 270rpx;
    left: 50%;
    transform: translateX(-50%);
    box-sizing: border-box;
    padding-top: 30rpx;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.txt{
    font-size: 28rpx;
    color: #343434;
}
.txt:nth-child(2){
    margin:10rpx 0 ;
}
.txt_num{
    font-size: 47rpx;
    font-weight: bold;
}
.close{
    width: 53rpx;
    height: 52rpx;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: -70rpx;
}
.priseTip{
    width: 688rpx;
    margin: 30rpx auto 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 24rpx;
}
.priseTip .honeybee{
    width: 97rpx;
    height: 84rpx;
}
.priseTip .honeybee image{
    width: 100%;
    height: 100%;
    display: block;
}
.priseTipText_title{
    font-size: 30rpx;
    font-weight: bold;
}
.blue{
    color: #2099d7;
}
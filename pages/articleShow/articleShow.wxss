image {
    display: block;
    width: 100%;
    height: 100%;
}

.container {
    width: 100%;
    height: 100vh;
    background-size: 100%;
    background-repeat: no-repeat;
    position: relative;
    /* overflow-y: hidden; */
}

.banner {
    width: 100%;
    height: 343rpx;
}

.articlBox {
    width: 100%;
    height: 80vh;
    position: absolute;
    top: 0rpx;
    left: 50%;
    transform: translateX(-50%);
}

.artic_item {
    background-size: 100%;
    background-repeat: no-repeat;
    width: 712rpx;
    height: 215rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0 auto;
}

.artic_item_white {
    width: 670rpx;
    height: 170rpx;
    background-color: #fff;
    display: flex;
    align-items: center;
    box-sizing: border-box;
    padding: 10rpx;
    position: relative;
}

.text {
    box-sizing: border-box;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-content: flex-start;
    /* padding: 10rpx; */
}

.title {
    font-size: 30rpx;
    white-space: nowrap;
    text-indent: -10rpx;
    padding-top: 8rpx;
}

.line {
    width: 670rpx;
    margin-left: -9rpx;
    height: 1px;
    background-color: #ccc;
}

.who,
.number {
    font-size: 24rpx;
}
.who{
    display: flex;
    justify-content: center;
    align-items: center;

}
.personalIcon{
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    overflow: hidden;
    margin-right: 5rpx;
}
.name {
    width: 170rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 5rpx;
}

.more {
    background-color: #1f97d4;
    width: 200rpx;
    height: 54rpx;
    border-radius: 10rpx;
    color: #fff;
    line-height: 54rpx;
    text-align: center;
    font-size: 30rpx;
    margin-right: 10rpx;
}

.number {
    width: 150rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.laud {
    width: 43rpx;
    height: 41rpx;
    margin-right: 20rpx;
}

.buttons {
    width: 670rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    bottom: 100rpx;
    left: 50%;
    transform: translateX(-50%);
}

.rank,
.upload {
    width: 323rpx;
    height: 71rpx;
    background-size: 100%;
    background-repeat: no-repeat;
    color: #fff;
    text-align: center;
    line-height: 71rpx;
    background-color: transparent!important;
    font-size: 36rpx;
}
.upload{
    margin-left: 50rpx;
}
.upload::after,
.upload::before {
    background-color: transparent!important;
    border: none;
}

.empty{
    color: #fff;
    text-align: center;
}
.container{
    width: 100%;
    height: 100vh;
    background-size: 100%;
    background-repeat: no-repeat;
    position: relative;
    overflow-y: auto;
    overflow-x: hidden;
    background-color: #eeeeee;
    padding-bottom: 100rpx;
}

.banner{
    width: 100%;
    height: auto;
    position: relative;
}
.banner image{
    width: 100%;
    display: block;
}
.logo{
    width: 140rpx;
    position: absolute;
    left: 50rpx;
    top: 25rpx;
}
.text{
    position: absolute;
    top: 112rpx;
    left: 50rpx;
    font-size: 25rpx;
    color: #fff;
    font-weight: bold;
}
.text view:first-child{
    margin-bottom: 18rpx;
}
/* 导航 */
.nav{
    width: 100%;
    background-color: #fff;
}
.nav .nav-container{
    width: 600rpx;
    height: 145rpx;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.nav_item{
    font-size: 20rpx;
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.nav_item image{
    width: 70rpx;
    height: 70rpx;
    margin-bottom: 10rpx;
}

.part1{
    padding: 0 34rpx;
    background-color: #fff;
    margin-top: 10rpx;
    overflow: hidden;
}
.part1 .title{
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 30rpx;
    color: #0068b7;
    font-weight: bold;
    margin: 30rpx 0;
}
.part1 .arrow{
    width: 13rpx;
    height: 21rpx;
}

.part1 .arrow image{
    width: 100%;
    height: 100%;
}
.part1 .content{
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    text-align: center;
}
.part1 .content .content_item{
    width: 216rpx;
    margin-bottom: 10rpx;
}
.part1 .content .content_item image{
    width: 216rpx;
    height: 186rpx;
}
.part1 .content .content_item view{
    font-size: 20rpx;
}
.part2{
    padding: 0 34rpx;
    background-color: #fff;
    margin-top: 10rpx;
    overflow: hidden;
    height: auto;
}
.part2 .title{
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 30rpx;
    color: #0068b7;
    font-weight: bold;
    margin: 30rpx 0;
}
.part2 .arrow{
    width: 13rpx;
    height: 21rpx;
}

.part2 .arrow image{
    width: 100%;
    height: 100%;
}
.part2 .content{
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    text-align: center;
}
.part2 .content .content_item{
    width: 333rpx;
    margin-bottom: 10rpx;
}
.part2 .content .content_item image{
    width: 333rpx;
    height: 199rpx;
}
.part2 .content .content_item view{
    font-size: 20rpx;
}



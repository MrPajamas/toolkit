image {
    display: block;
    width: 100%;
    height: 100%;
}

.container {
    width: 100%;
    height: 100vh;
    background-size: 100%;
    background-repeat: no-repeat;
    position: relative;
    overflow-y: auto;
    overflow-x: hidden;
}
.general {
    width: 100%;
    box-sizing: border-box;
    height: 100rpx;
    border-bottom: 1px solid #ccc;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding-left: 50rpx;
}

.general:first-of-type input{
    font-size: 27rpx;
    line-height: 27rpx;
    height: 27rpx;
    width: 500rpx;
    padding: 0;
    margin: 0;
    padding-top: 3rpx;
    border: none;
}
.article{
    border: none;
}
.icon {
    width: 46rpx;
    height: 43rpx;
    margin-right: 25rpx;
}


.text {
    font-size: 30rpx;
    color: #939393;
}
.content{
    width: 100%;
    min-height: 700rpx;
    box-sizing: border-box;
    padding: 0 50rpx;
    font-size: 27rpx;
    border-bottom: 1px solid #ccc;
}
.content .textarea{
    width: 100%;
    height: 700rpx;
}

.upLoad{
    width: 600rpx;
    height: 80rpx;
    background-color: #158dec;
    text-align: center;
    line-height: 80rpx;
    font-size: 36rpx;
    border-radius: 10rpx;
    color: #fff;
    margin: 100rpx auto;
}


.confirmFrame {
    width: 674rpx;
    height: 553rpx;
    background-size: 100%;
    background-repeat: no-repeat;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    z-index: 10000;
    box-sizing: border-box;
}

.confirmFrame_content {
    width: 580rpx;
    height: 300rpx;
    margin: 48rpx 0 0 53rpx;
    text-align: center;
    box-sizing: border-box;
    padding-top: 80rpx;
}

.confirm_num {
    font-size: 47rpx;
    font-weight: bold;
}

.txt {
    font-size: 36rpx;
    color: #343434;
}

.txt:first-child {
    margin-bottom: 50rpx;
}

.yesOrNo {
    width: 500rpx;
    position: absolute;
    bottom: 70rpx;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.yes,
.no {
    width: 237rpx;
    height: 84rpx;
    background-size: 100%;
    background-repeat: no-repeat;
    color: #fff;
    text-align: center;
    line-height: 70rpx;
    font-size: 36rpx;
}

.close {
    width: 53rpx;
    height: 52rpx;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: -70rpx;
}

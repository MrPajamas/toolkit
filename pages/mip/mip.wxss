view,text{
    line-height: 1;
}
image {
    width: 100%;
    height: 100%;
    display: block;
}

.container {
    width: 100%;
    height: 100vh;
    background-size: 100%;
    background-repeat: no-repeat;
    position: relative;
    overflow-y: hidden;
    background-repeat: no-repeat;
    background-size: 100%;
}

.banner{
    background-size: cover;
    background-repeat: no-repeat;
    width: 100%;
    height: 241rpx;
    overflow: hidden;
}
.banner .title{
    font-size: 34rpx;
    color: #fff;
    margin: 0 auto;
    margin-top: 34rpx;
    text-align: center;
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 690rpx;
}
.banner .title .blueLine_left,.banner .title .blueLine_right{
    width: 168rpx;
    height: 14rpx;
}
.tabs{
    margin: 0 auto;
    margin-top: 45rpx;
    width: 660rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.tab-btn{
    width: 293rpx;
    height: 84rpx;
    background-size: cover;
    background-repeat: no-repeat;
    color: #fff;
    text-align: center;
    padding-top: 15rpx;
    box-sizing: border-box;
}
.middleBanner{
    background-size: cover;
    background-repeat: no-repeat;
    width: 100%;
    height: 256rpx;
    margin-top: -40rpx;
    position: relative;
}
.detail{
    background-size: cover;
    background-repeat: no-repeat;
    width: 184rpx;
    height: 47rpx;
    font-size: 30rpx;
    color: #fff;
    text-align: center;
    line-height: 47rpx;
    position: absolute;
    right: 31rpx;
    bottom: 28rpx;
}
.currentVideo{
    width: 690rpx;
    height: 45%;
    background-color: red;
    margin: 0 auto;
}
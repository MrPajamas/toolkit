image {
    width: 100%;
    height: 100%;
    display: block;
}

input {
    font-size: 27rpx;
    line-height: 1;
}

.container {
    width: 100%;
    height: 100vh;
    background-size: 100%;
    background-repeat: no-repeat;
    position: relative;
    overflow-y: hidden;
    overflow-x: hidden;
    background-size: 100%;
}

.general {
    height: 100rpx;
    width: 100%;
    border-bottom: 1px solid #ccc;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding-left: 50rpx;
}

.icon {
    width: 45rpx;
    height: 45rpx;
    margin-right: 25rpx;
}

.titleInput {
    width: 400rpx;
}

.text {
    font-size: 30rpx;
    color: #939393;
}

.general:nth-of-type(4) {
    border: none;
}

.general input {
    flex: 1;
}

.add {
    width: 150rpx;
    height: 150rpx;
    background-color: #e5e5e5;
    margin-left: 50rpx;
    margin-top: 20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.add>view {
    width: 69rpx;
    height: 69rpx;
}

.line {
    height: 1px;
    width: 100%;
    border-bottom: 1px solid #ccc;
    margin-top: 125rpx;
}

.upLoad {
    width: 600rpx;
    height: 75rpx;
    border-radius: 10rpx;
    background-color: #158dec;
    color: #fff;
    text-align: center;
    line-height: 75rpx;
    margin: 100rpx auto;
}

.upVideo {
    width: 300rpx;
    height: 300rpx;
    margin-left: 50rpx;
}

.wrap {
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.confirmFrame {
    width: 674rpx;
    height: 553rpx;
    background-size: 100%;
    background-repeat: no-repeat;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    z-index: 10000;
    box-sizing: border-box;
}

.confirmFrame_content {
    width: 580rpx;
    height: 300rpx;
    margin: 48rpx 0 0 53rpx;
    text-align: center;
    box-sizing: border-box;
    padding-top: 80rpx;
}

.confirm_num {
    font-size: 47rpx;
    font-weight: bold;
}

.txt {
    font-size: 36rpx;
    color: #343434;
}

.txt:first-child {
    margin-bottom: 50rpx;
}

.yesOrNo {
    width: 500rpx;
    position: absolute;
    bottom: 70rpx;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.yes,
.no {
    width: 237rpx;
    height: 84rpx;
    background-size: 100%;
    background-repeat: no-repeat;
    color: #fff;
    text-align: center;
    line-height: 70rpx;
    font-size: 36rpx;
}

.close {
    width: 53rpx;
    height: 52rpx;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: -70rpx;
}
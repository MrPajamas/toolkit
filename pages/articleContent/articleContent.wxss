
image {
    width: 100%;
    height: 100%;
    display: block;
}

.container {
    width: 100%;
    height: 100vh;
    background-size: 100%;
    background-repeat: no-repeat;
    position: relative;
    overflow-x: hidden;
    color: #939393;
}

.title {
    height: 100rpx;
    line-height: 100rpx;
    border-bottom: 1px solid #ccc;
    text-align: center;
    font-size: 30rpx;
    font-weight: bold;
}

.content {
    padding: 50rpx;
    font-size: 24rpx;
    word-wrap: break-word;
    display: block;
}
.laud{
    position: fixed;
    right: 18rpx;
    top: 50%;
    transform: translateY(-50%);
    color: #000;
    font-size: 24rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.heart{
    width: 84rpx;
    height: 82rpx;
}

.share{
    position: fixed;
    right: 18rpx;
    top: 34%;
    padding: 0!important;
    background-color: transparent!important;
}
.share::after,
.share::before {
    background-color: transparent!important;
    border: none;
}
.shareImg{
    width: 84rpx;
    height: 84rpx;
}
.sharetext{
    font-size: 24rpx;
    color: #000;
    line-height: 1;
}
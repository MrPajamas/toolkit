
.container{
    width: 100%;
    height: 100vh;
    background-size: 100%;
    background-repeat: no-repeat;
    position: relative;
    overflow-y: hidden;
}

.list{
    width: 698rpx;
    height: 513rpx;
    background-size: 100%;
    background-repeat: no-repeat;
    margin: 475rpx auto 0;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    font-size: 34rpx;
    color: #fff;
}
.list_item{
    z-index: 10;
}
.list_item:nth-child(1),.list_item:nth-child(4){
    width: 200rpx;
    height: 190rpx;
    position: absolute;
}
.list_item:nth-child(1){
    left: 0;
    bottom: 58rpx;
}
.list_item:nth-child(1) image{
    width: 56rpx;
    height: 69rpx;
    margin: 20rpx 0 20rpx 93rpx;
}
.list_item:nth-child(1) .text{
    margin-left: 93rpx;
}
.list_item:nth-child(4){
    right: 0;
    bottom: 58rpx;
}
.list_item:nth-child(4) image{
    width: 56rpx;
    height: 57rpx;
    margin: 20rpx 0 30rpx 50rpx;
}
.list_item:nth-child(4) .text{
    margin-left: 55rpx;
}
.list_item:nth-child(2),.list_item:nth-child(3){
    position: absolute;
    width: 280rpx;
    height: 230rpx;
}
.list_item:nth-child(2){
    left: 58rpx;
    top: 0;
}
.list_item:nth-child(2) image{
    width: 69rpx;
    height: 68rpx;
    margin: 95rpx 0 0 170rpx ;
}
.list_item:nth-child(2) .text{
    margin-left: 100rpx;
    margin-top: -13rpx;
}
.list_item:nth-child(3){
    right: 58rpx;
    top: 0;
    text-align: right;
}
.list_item:nth-child(3) image{
    width: 53rpx;
    height: 57rpx;
    margin: 95rpx 180rpx 0  0;
}
.list_item:nth-child(3) .text{
    margin-right: 110rpx;
    /* margin-top: 5rpx; */
}
.circle{
    position: absolute;
    width: 370rpx;
    height: 370rpx;
    left: 50%;
    transform: translateX(-50%);
    bottom: -13rpx;
    background-repeat: no-repeat;
    background-size: cover;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 34rpx;
}

.pure{
    width: 100%;
    height: 300rpx;
    background-color: #061732;
    position: absolute;
    top: 1219rpx;
    left: 0;
}





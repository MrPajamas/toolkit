image{
    width: 100%;
    height: 100%;
    display: block;
}
.container{
    width: 100%;
    height: 100vh;
    background-size: 100%;
    background-repeat: no-repeat;
    position: relative;
    overflow-y: hidden;
    background-repeat: no-repeat;
    background-size: 100%;
}
.teamMember{
    width: 690rpx;
    height: 369rpx;
    background-repeat: no-repeat;
    background-size: 100%;
    position: absolute;
    top: 450rpx;
    left: 50%;
    transform: translateX(-50%);
}

.teamMember .title{
    color: #fff;
    font-size: 36rpx;
    margin: 52rpx auto 0;
    text-align: center;
}
.teamMember .memberBox{
    width: 575rpx;
    display: flex;
    justify-content: space-between;
    margin: 36rpx auto 0;
}
.teamMember .teamMember_item{
    width: 175rpx;
    height: 190rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: #1dd0eb;
    border-radius: 10rpx;
    border: 1px solid #fff;
}
.teamMember .teamMember_item .icon{
    width: 84rpx;
    height: 84rpx;
    margin: 10rpx 0;
}
.teamMember .teamMember_item .data{
    width: 100%;
    font-size: 24rpx;
    color: #fff;
    display: flex;
    flex: 1;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: #0c4d8e;
    border-radius: 0 0 10rpx 10rpx;
}
.teamMember .teamMember_item .data > view{
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    text-align: center;
    width: 100%;
}

.buttons{
    position: absolute;
    top: 850rpx;
    left: 50%;
    transform: translateX(-50%);
}
.invitation,.quit,.dissolve{
    width: 323rpx;
    height: 71rpx;
    background-size: 100%;
    background-repeat: no-repeat;
    color: #fff;
    text-align: center;
    line-height: 71rpx;
    font-size: 36rpx;
    background-color: transparent;
    padding: 0;
    margin: 0;
    margin-bottom: 10rpx;
    border-radius: 0;
}

.teamCreated{
    width: 690rpx;
    height: 675rpx;
    background-repeat: no-repeat;
    background-size: 100%;
    position: absolute;
    top: 10%;
    left: 50%;
    transform: translateX(-50%);
    z-index: 100;
    color: #fff;
    font-size: 36rpx;
}
.teamCreated .text{
    position: absolute;
    bottom: 180rpx;
    left: 50%;
    transform: translateX(-50%);
}

.teamCreated .close{
    position: absolute;
    bottom: 50rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 293rpx;
    height: 84rpx;
    background-size: 100%;
    background-repeat: no-repeat;
    text-align: center;
    line-height: 74rpx;
}


.container {
    width: 100%;
    height: 100vh;
    background-size: 100%;
    background-repeat: no-repeat;
    position: relative;
    overflow-x: hidden;
    padding-bottom: 100rpx;
}

.banner {
    width: 100%;
    height: 255rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.banner .title {
    width: 363rpx;
    height: 200rpx;
}

.grayLine {
    width: 100%;
    height: 13rpx;
    background-color: #ededed;
}

.form {
    margin-top: 30rpx;
}

.form>view {
    width: 615rpx;
    height: 65rpx;
    border-bottom: 1px solid #ccc;
    margin: 0 auto;
    margin-top: 25rpx;
    padding: 0 30rpx;
    position: relative;
}

.store {
    height: auto !important;
    min-height: 65rpx !important;
    align-items: flex-start !important;
}

.store>.title {
    white-space: nowrap;
}

.store .value {
    line-height: 65rpx;
    width: 430rpx;
}

.form>view {
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.form .title {
    width: 140rpx !important;
    line-height: 65rpx;
    display: inline-block;
}

.arrow {
    width: 36rpx;
    height: 20rpx;
    position: absolute;
    right: 30rpx;
    top: 50%;
    transform: translateY(-50%);
}

.binding {
    width: 295rpx;
    height: 65rpx;
    line-height: 65rpx;
    border: 1rpx solid #0078d7;
    background-color: #fff;
    margin-top: 60rpx;
    color: #0078d7;
}
.privacy{
    width: 590rpx;
    margin: 20px auto 0 ;
    font-size: 24rpx;
    line-height: 45rpx;
}
.solid{
    display: flex;
    justify-content: flex-start;
    align-items: center;
    color: #2b2b2b;
}
.tof{
    width: 32rpx;
    height: 32rpx;
    margin-right: 20rpx;
}
.tof image{
    width: 100%;
    height: 100%;
    display: block;
}
.nothingness{
    color: #a9a9a9;
}
.txt4{
    word-break:break-all;
}
image {
    width: 100%;
    height: 100%;
    display: block;
}

.container {
    width: 100%;
    height: 100vh;
    background-size: 100%;
    background-repeat: no-repeat;
    position: relative;
    overflow-y: hidden;
    overflow-x: hidden;

}

.myActivity {
    display: flex;
    justify-content: center;
    align-items: center;
    border-bottom: 1px solid #ccc;
    height: 160rpx;
    font-size: 48rpx;
    color: #6b6b6b;
}

.myActivity .bigIcon {
    width: 64rpx;
    height: 64rpx;
    margin-right: 10rpx;
}

.myArticle {
    width: 100%;
    margin: 0 auto;
    border-bottom: 1px solid #ccc;
    padding-bottom: 20rpx;
    padding-left: 20rpx;
}

.myArticle>.title {
    padding-left: 10rpx;
    
    font-display: 36rpx;
    color: #6b6b6b;
    margin-top: 10rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.myArticle .edit{
    width: 50rpx;
    height: 50rpx;
    width: 44rpx;
    height: 44rpx;
    margin-right: 50rpx;
}
.nowrap {
    white-space: nowrap;
    text-indent: -12rpx;
}

.artic_item {
    background-size: 100%;
    background-repeat: no-repeat;
    width: 712rpx;
    height: 215rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.artic_item_white {
    width: 670rpx;
    height: 170rpx;
    background-color: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    padding: 10rpx;
    position: relative;
}

.text {
    height: 100%;
    /* display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-content: flex-start; */
    padding: 10rpx;
}

.line {
    width: 670rpx;
    margin-left: -20rpx;
    height: 1px;
    background-color: #ccc;
}
.bottom{
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100rpx;
}
.title {
    font-size: 30rpx;
    height: 50rpx;
}

.who,
.number,
.more {
    font-size: 24rpx;
}

.who{
    display: flex;
    justify-content: center;
    align-items: center;

}
.personalIcon{
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    overflow: hidden;
    margin-right: 10rpx;
}
.more {
    background-color: #1c8cc6;
    width: 150rpx;
    height: 50rpx;
    border-radius: 10rpx;
    color: #fff;
    line-height: 50rpx;
    text-align: center;
    margin-right: 10rpx;
}

.number {
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.myArticle .laud {
    width: 43rpx;
    height: 41rpx;
    margin-right: 20rpx;
}

.myEZ {
    width: 100%;
    padding-left: 30rpx;
    border-bottom: 1px solid #ccc;
}

.myEZ>.title {
    font-display: 36rpx;
    color: #6b6b6b;
    margin: 10rpx 0;
}

.ezImage {
    width: 695rpx;
    height: 130rpx;
}

.buttons_item {
    width: 695rpx;
    height: 159rpx;
    background-size: 100%;
    background-repeat: no-repeat;
    position: relative;
    margin-bottom: 10rpx;
}

.buttons_item_icon {
    width: 84rpx;
    height: 58rpx;
    position: absolute;
    left: 60rpx;
    top: 35rpx;
}

.buttons_item_text {
    font-size: 36rpx;
    color: #fff;
    flex: 1;
    text-align: center;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 42rpx;
}

.myVideo {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    padding-left: 23rpx;
    border-bottom: 1px solid #ccc;
}

.myVideo>.title {
    width: 100%;
    padding-left: 10rpx;
    margin-top: 10rpx;
    color: #6b6b6b;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.myVideo .edit{
    width: 50rpx;
    height: 50rpx;
    width: 44rpx;
    height: 44rpx;
    margin-right: 45rpx;
}
.video_item {
    width: 705rpx;
    height: 279rpx;
    background-size: 100%;
    background-repeat: no-repeat;
    margin-bottom: 20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.video_item_inner {
    width: 665rpx;
    height: 245rpx;
    background-color: #fff;
    box-sizing: border-box;
    padding: 10rpx 10rpx 0;
}

.videoData {
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    padding: 0 10rpx;
}

.video {
    width: 630rpx;
    height: 185rpx;
    margin: 0 auto;
    position: relative;
}

.play {
    width: 38rpx;
    height: 38rpx;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
}

.videoData {
    margin-top: 10rpx;
    color: #404040;
}

.videoData .name {
    font-size: 22rpx;
}

.myVideo .laud {
    font-size: 17.5rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.myVideo .laud .heart {
    width: 28rpx;
    height: 24rpx;
    margin-right: 5rpx;
}

.empty {
    font-size: 30rpx;
    text-align: center;
    margin-top: 100rpx;
}
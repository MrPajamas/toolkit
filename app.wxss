/* tabbar */
.tabbar_box{
    display: flex;
    flex-direction: row;
    justify-content: center;
    background-color: #404040;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 100000;
    width: 100%;
    height: 79rpx;
  }
  
  .tabbar_nav{
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 24rpx;
    height: 100%;
    border-right: 5rpx solid #fff;
    color: #fff;
  }
  .tabbar_nav:last-child{
    border: none;
  }
  
  .tabbar_icon{
    width: 30rpx;
    height: 30rpx;
    margin-right: 20rpx;
  }
  .tabbar_icon:nth-child(1){
    width: 39rpx;
    height: 39rpx;
  }
  .tabbar_icon:nth-child(2){
    width: 28rpx;
    height: 35rpx;
  }
  .tabbar_icon:nth-child(3){
    width: 27rpx;
    height: 29rpx;
  }
  .tabbar_icon:nth-child(4){
    width: 28rpx;
    height: 28rpx;
  }
  
/* 黑幕 */
  .blackCurtain{
    width: 100%;
    height: 100%;
